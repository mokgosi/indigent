{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Owner list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Idno</th>
                <th>Firstname</th>
                <th>Lastname</th>
                <th>Telephone</th>
                <th>Mobile</th>
                <th>Address</th>
                <th>City</th>
                <th>Provinceid</th>
                <th>Code</th>
                <th>Created</th>
                <th>Updated</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('owner_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.idNo }}</td>
                <td>{{ entity.firstName }}</td>
                <td>{{ entity.lastName }}</td>
                <td>{{ entity.telephone }}</td>
                <td>{{ entity.mobile }}</td>
                <td>{{ entity.address }}</td>
                <td>{{ entity.city }}</td>
                <td>{{ entity.provinceId }}</td>
                <td>{{ entity.code }}</td>
                <td>{% if entity.created %}{{ entity.created|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.updated %}{{ entity.updated|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('owner_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('owner_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('owner_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
