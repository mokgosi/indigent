{% extends '::base.html.twig' %}

{% block main -%}

    <div class="container-fluid">
        <!-- BEGIN PAGE HEADER-->   
        <div class="row-fluid">
            <div class="span12">
                <h3 class="page-title">
                    Erf creation
                    <small>Erf creation</small>
                </h3>
                <ul class="breadcrumb">
                    <li>
                        <i class="icon-home"></i>
                        <a href="index.html">Home</a> 
                        <span class="icon-angle-right"></span>
                    </li>
                    <li>
                        <a href="#">Add New Erf</a>
                    </li>
                </ul>
            </div>
        </div>
        <!-- END PAGE HEADER-->
        <!-- BEGIN PAGE CONTENT-->
        <div class="row-fluid">
            <div class="span12">
                <div class="tabbable tabbable-custom boxless">
                    <ul class="nav nav-tabs">
                        <li class="active"><a  href="#tab_1" data-toggle="tab">Erf info</a></li>
                        <li><a  href="#tab_2" data-toggle="tab">Owner info</a></li>
                    </ul>
                    <div class="tab-content">
                        <div class="tab-pane active" id="tab_1">
                            <div class="portlet box blue">
                                <div class="portlet-title">
                                    <div class="caption"><i class="icon-reorder"></i>Erf Details</div>
                                    <div class="tools">
                                        <a href="javascript:;" class="collapse"></a>
                                        <a href="#portlet-config" data-toggle="modal" class="config"></a>
                                        <a href="javascript:;" class="reload"></a>
                                        <a href="javascript:;" class="remove"></a>
                                    </div>
                                </div>
                                <div class="portlet-body form">
                                    <form action="{{ path('erf') }}" {{ form_enctype(form) }} method="POST">    

                                        <h3 class="form-section">Erf Info</h3>

                                        {{ form_widget(form._token) }}

                                        <div class="row-fluid">
                                            <div class="span6 ">
                                                <div class="control-group">
                                                    <label class="control-label">Type</label>
                                                    <div class="controls">
                                                        {{ form_widget(form.erfTypeId, { 'attr': {'class': 'm-wrap span12 placeholder-no-fix'} }) }}
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row-fluid">
                                            <div class="span6 ">
                                                <div class="control-group">
                                                    <label class="control-label">Erf No</label>
                                                    <div class="controls">
                                                        {{ form_widget(form.erfNo, { 'attr': {'class': 'm-wrap span12 placeholder-no-fix'} }) }}
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row-fluid">
                                            <div class="span6 ">
                                                <div class="control-group">
                                                    <label class="control-label">Street Address</label>
                                                    <div class="controls">
                                                        {{ form_widget(form.streetName, { 'attr': {'class': 'm-wrap span12 placeholder-no-fix'} }) }}
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row-fluid">
                                            <div class="span6 ">
                                                <div class="control-group">
                                                    <label class="control-label">Location</label>
                                                    <div class="controls">
                                                        {{ form_widget(form.locationId, { 'attr': {'class': 'm-wrap span12 placeholder-no-fix'} }) }}
                                                    </div>
                                                </div>
                                            </div>
                                        </div>                                                    
                                        <div class="row-fluid">
                                            <div class="span6 ">
                                                <div class="control-group">
                                                    <label class="control-label" >Section</label>
                                                    <div class="controls">
                                                        {{ form_widget(form.sectionId, { 'attr': {'class': 'm-wrap span12 placeholder-no-fix'} }) }}
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-actions">
                                            <button type="submit" class="btn blue"><i class="icon-ok"></i> Save</button>
                                            <a href="{{ path('erf') }}" class="btn">Cancel</a>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                        <div class="tab-pane" id="tab_2">
                            <div class="portlet box blue">
                                <div class="portlet-title">
                                    <div class="caption"><i class="icon-reorder"></i>Owner Details</div>
                                    <div class="tools">
                                        <a href="javascript:;" class="collapse"></a>
                                        <a href="#portlet-config" data-toggle="modal" class="config"></a>
                                        <a href="javascript:;" class="reload"></a>
                                        <a href="javascript:;" class="remove"></a>
                                    </div>
                                </div>
                                <div class="portlet-body form">
                                    <h3 class="form-section">Personal Info</h3>
                                    <div class="row-fluid">
                                        <div class="span6 ">
                                            <div class="control-group">
                                                <label class="control-label">First Name</label>
                                                <div class="controls">
                                                    <input type="text" class="m-wrap span12" placeholder="Chee Kin">
                                                    <span class="help-block">This is inline help</span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="span6 ">
                                            <div class="control-group">
                                                <label class="control-label">Last Name</label>
                                                <div class="controls">
                                                    <input type="text" class="m-wrap span12" placeholder="Lim">
                                                    <!--<span class="help-block">This field has error.</span>-->
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row-fluid">
                                        <div class="span6 ">
                                            <div class="control-group">
                                                <label class="control-label">Gender</label>
                                                <div class="controls">
                                                    <select class="m-wrap span12">
                                                        <option value="1">Male</option>
                                                        <option value="2">Female</option>
                                                    </select>
                                                    <span class="help-block">Select your gender.</span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="span6 ">
                                            <div class="control-group">
                                                <label class="control-label" >ID Number</label>
                                                <div class="controls">
                                                    <input type="text" class="m-wrap span12" placeholder="">
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row-fluid">
                                        <div class="span6 ">
                                            <div class="control-group">
                                                <label class="control-label" >Telephone</label>
                                                <div class="controls">
                                                    <input type="text" class="m-wrap span12" placeholder="">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="span6 ">
                                            <div class="control-group">
                                                <label class="control-label" >Mobile</label>
                                                <div class="controls">
                                                    <input type="text" class="m-wrap span12" placeholder="">
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <h3 class="form-section">Address</h3>
                                    <div class="row-fluid">
                                        <div class="span12 ">
                                            <div class="control-group">
                                                <label class="control-label">Street</label>
                                                <div class="controls">
                                                    <input type="text" class="m-wrap span12" >
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row-fluid">
                                        <div class="span6 ">
                                            <div class="control-group">
                                                <label class="control-label">City</label>
                                                <div class="controls">
                                                    <input type="text" class="m-wrap span12"> 
                                                </div>
                                            </div>
                                        </div>
                                        <div class="span6 ">
                                            <div class="control-group">
                                                <label class="control-label" >Provice</label>
                                                <div class="controls">
                                                    <input type="text"  class="m-wrap span12"> 
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row-fluid">
                                        <div class="span6 ">
                                            <div class="control-group">
                                                <label class="control-label">Post Code</label>
                                                <div class="controls">
                                                    <input type="text" class="m-wrap span12"> 
                                                </div>
                                            </div>
                                        </div>
                                        <div class="span6 ">
                                            <div class="control-group">

                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-actions">
                                        <button type="submit" class="btn blue"><i class="icon-ok"></i> Save</button>
                                        <a href="{{ path('erf') }}" class="btn">Cancel</a>
                                    </div>
                                </div>
                            </div>    
                        </div>
                    </div>
                </div>
            </div>
        </div>

    {% endblock %}
