{% extends 'owner/layout.html.twig' %}

{% block main_body %}

    <div class="portlet-body form">
        {{ form_start( form, {'attr': {'novalidate': 'novalidate'}} ) }}    

        <h3 class="form-section">Personal Details</h3>

        {{ form_errors(form) }}

        <div class="row-fluid">
            <div class="span6 ">
                <div class="control-group">
                    <label class="control-label" >ID Number</label>
                    <div class="controls">
                        <input type='text' id='ownerIdNo' value='' readonly='readonly' class='m-wrap span12 placeholder-no-fix'>
                        {{ form_errors(form.idNo) }}
                        {{ form_widget(form.idNo, { 'attr': {'class': 'm-wrap span12 placeholder-no-fix'} }) }}
                    </div>
                </div>
            </div>
        </div>

        <div class="row-fluid">
            <div class="span6 ">
                <div class="control-group">
                    <label class="control-label">First Name</label>
                    <div class="controls">
                        {{ form_errors(form.firstName) }}
                        {{ form_widget(form.firstName, { 'attr': {'class': 'm-wrap span12 placeholder-no-fix'} }) }}
                    </div>
                </div>
            </div>
        </div>

        <div class="row-fluid">
            <div class="span6 ">
                <div class="control-group">
                    <label class="control-label">Last Name</label>
                    <div class="controls">
                        {{ form_errors(form.lastName) }}
                        {{ form_widget(form.lastName, { 'attr': {'class': 'm-wrap span12 placeholder-no-fix'} }) }}
                    </div>
                </div>
            </div>
        </div>

        <div class="row-fluid">
            <div class="span6 ">
                <div class="control-group">
                    <label class="control-label">Email</label>
                    <div class="controls">
                        {{ form_errors(form.email) }}
                        {{ form_widget(form.email, { 'attr': {'class': 'm-wrap span12 placeholder-no-fix'} }) }}
                    </div>
                </div>
            </div>
        </div>

        <div class="row-fluid">
            <div class="span6 ">
                <div class="control-group">
                    <label class="control-label">Mobile</label>
                    <div class="controls">
                        {{ form_errors(form.mobile) }}
                        {{ form_widget(form.mobile, { 'attr': {'class': 'm-wrap span12 placeholder-no-fix'} }) }}
                    </div>
                </div>
            </div>
        </div>

        <div class="row-fluid">
            <div class="span6 ">
                <div class="control-group">
                    <label class="control-label">Telephone</label>
                    <div class="controls">
                        {{ form_errors(form.telephone) }}
                        {{ form_widget(form.telephone, { 'attr': {'class': 'm-wrap span12 placeholder-no-fix'} }) }}
                    </div>
                </div>
            </div>
        </div>

        <div class="form-actions">
            {{ form_widget(form.submit, { 'attr': {'class': 'btn blue', 'label': '<i class="icon-ok"></i> Save'} }) }}
            {#                                            <button type="submit" class="btn blue"><i class="icon-ok"></i> Save</button>#}
            <a href="{{ path('erf') }}" class="btn">Cancel</a>
        </div>

        {{form_end(form)}}
    </div>
{% endblock %}