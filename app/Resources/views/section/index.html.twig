{% extends 'section/layout.html.twig' %}

{% block title %} | Section{% endblock %}   

{% block page_title %}Section{% endblock %}
{% block page_title_small %}Section{% endblock %}
{% block breadcrumb %}Section{% endblock %}
{% block page_tab_info_title %}Section Info{% endblock %}
{% block page_tab_details_title %}Section{% endblock %}

{% block main_body %}
    <div class="portlet-body">
        <div class="table-toolbar">
            <div class="btn-group">
                <a href="{{path('section_new')}}" class="btn green">
                    Add New <i class="icon-plus"></i>
                </a>
            </div>
        </div>
        <table class="table table-striped table-hover table-bordered" id="sample_editable_1">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Location</th>
                    <th>Xcoord</th>
                    <th>Ycoord</th>
                    <th>Show</th>
                    <th>Edit</th>
                </tr>
            </thead>
            <tbody>
                {% for entity in entities %}
                    <tr>
                        <td>{{ entity.name }}</td>
                        <td>{{ entity.location.name }}</td>
                        <td>{{ entity.xCoord }}</td>
                        <td>{{ entity.yCoord }}</td>
                        <td><a href="{{ path('section_show', { 'id': entity.id }) }}">show</a></td>
                        <td><a href="{{ path('section_edit', { 'id': entity.id }) }}">edit</a></td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}