{% extends 'erf/layout.html.twig' %}

{% block javascripts %}
    {{ parent() }}
    <script>
        jQuery(document).ready(function () {
            App.init();
        });
    </script>    
{% endblock %}

{% block main_body %}
    <div class="portlet-body"> 
        <div class="table-toolbar">
            <div class="btn-group">
                <a href="{{path('erf_new')}}" class="btn green">
                    Add Erf <i class="icon-plus"></i>
                </a>
            </div>
            <div class="btn-group pull-right">
                <button class="btn dropdown-toggle" data-toggle="dropdown">Tools <i class="icon-angle-down"></i>
                </button>
                <ul class="dropdown-menu pull-right">
                    <li><a href="#">Print</a></li>
                    <li><a href="#">Save as PDF</a></li>
                    <li><a href="#">Export to Excel</a></li>
                </ul>
            </div>
        </div>
        <div class="portlet-body form">
            {{ form_start(delete_form) }}
            <div class="form-horizontal form-view">
                <h3 class="form-section">Erf Info</h3>
                <div class="row-fluid">
                    <div class="span6 ">
                        <div class="control-group">
                            <label class="control-label" for="erfNo">Erf No:</label>
                            <div class="controls">
                                <input type="text" value="{{ entity.erfNo }}" readonly="readonly" class="m-wrap span12"/>
                            </div>
                        </div>
                    </div>
                    <div class="span6 ">
                        <div class="control-group">
                            <label class="control-label" >Balance:</label>
                            <div class="controls">                                                
                                <input type="text" value="{{ entity.balance }}" readonly="readonly" class="m-wrap span12"/>                                                        
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row-fluid">
                    <div class="span6 ">
                        <div class="control-group">
                            <label class="control-label" for="address">Street Address:</label>
                            <div class="controls">
                                <input type="text" value="{{ entity.address }}" readonly="readonly" class="m-wrap span12"/>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row-fluid">
                    <div class="span6 ">
                        <div class="control-group">
                            <label class="control-label" >Section:</label>
                            <div class="controls">
                                <input type="text" value="{{ entity.section.name }}" readonly="readonly" class="m-wrap span12"/>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row-fluid">  
                    <div class="span6 ">
                        <div class="control-group">
                            <label class="control-label" >Location:</label>
                            <div class="controls">
                                <input type="text" value="{{ entity.location.name }}" readonly="readonly" class="m-wrap span12"/>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row-fluid">
                    <div class="span6 ">
                        <div class="control-group">
                            <label class="control-label" >Erf Type:</label>
                            <div class="controls">
                                <input type="text" value="{{ entity.erfType.name }}" readonly="readonly" class="m-wrap span12"/>                            
                            </div>
                        </div>
                    </div>
                </div>
                <h3 class="form-section">Owner Info</h3>    
                <div class="row-fluid">
                    <div class="span6 ">
                        <div class="control-group">
                            <label class="control-label" >Owner:</label>
                            <div class="controls">                                                
                                <input type="text" value="{{ entity.owner.firstName }} {{ entity.owner.lastName }} - {{ entity.owner.socialSecurityNo }}" readonly="readonly" class="m-wrap span12"/>                                                        
                            </div>
                        </div>
                    </div>
                </div>
                <h3 class="form-section">Transaction History</h3>
                <div class="portlet-body">
                    <table class="table table-striped table-hover table-bordered" id="sample_editable_1">
                            <thead>
                                <tr>
                                    <th>Ref #</th>
                                    <th>Installment</th>
                                    <th>Received</th>
                                    <th>Still Due</th>
                                    <th>Total Balance</th>
                                    <th>Payed by</th>
                                    <th>Date</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for payment in entity.payments %}
                                    <tr>
                                        <td>{{ payment.refNo }}</td>
                                        <td>{{ payment.amountDue }}</td>
                                        <td>{{ payment.amountReceived }}</td>
                                        <td>{{ payment.amountOutstanding }}</td>
                                        <td>{{ payment.totalOutstanding }}</td>
                                        <td>{{ payment.payedBy }}</td>
                                        <td>{% if payment.created %}{{ payment.created|date('Y-m-d') }}{% endif %}</td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                </div>
                <div class="form-actions">
                    <a href="{{ path('erf') }}" class="btn">Back to list</a>
                    <a href="{{ path('erf_edit', { 'id': entity.id }) }}"  class="btn blue"><i class="icon-pencil"></i> Edit</a>
                    {{ form_widget(delete_form.submit, { 'attr': {'class': 'btn red', 'label': 'Delete'} }) }}
                </div>
            </div>
            {{ form_end(delete_form) }} 
        </div>
    </div>
{% endblock %}