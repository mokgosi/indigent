<div class="portlet-body form">
    {{ form_start( form, {'attr': {'novalidate': 'novalidate'}} ) }}    

    {{ form_errors(form) }}

    <div class="row-fluid">
        <div class="span6 ">
            <div class="control-group">
                <label class="control-label" >ID/Passport No.</label>
                <div class="controls">
                    {{ form_errors(form.socialSecurityNo) }}
                    {{ form_widget(form.socialSecurityNo, { 'attr': {'class': 'm-wrap span12 placeholder-no-fix'} }) }}
                </div>
            </div>
        </div>
    </div>

    <div class="row-fluid">
        <div class="span6 ">
            <div class="control-group">
                <label class="control-label">First Name</label>
                <div class="controls">
                    {{ form_errors(form.firstName) }}
                    {{ form_widget(form.firstName, { 'attr': {'class': 'm-wrap span12 placeholder-no-fix'} }) }}
                </div>
            </div>
        </div>
    </div>

    <div class="row-fluid">
        <div class="span6 ">
            <div class="control-group">
                <label class="control-label">Last Name</label>
                <div class="controls">
                    {{ form_errors(form.lastName) }}
                    {{ form_widget(form.lastName, { 'attr': {'class': 'm-wrap span12 placeholder-no-fix'} }) }}
                </div>
            </div>
        </div>
    </div>

    <div class="row-fluid">
        <div class="span6 ">
            <div class="control-group">
                <label class="control-label">Gender</label>
                <div class="controls">
                    {{ form_errors(form.gender) }}
                    {{ form_widget(form.gender, { 'attr': {'class': 'm-wrap span12 placeholder-no-fix'} }) }}
                </div>
            </div>
        </div>
    </div>

    <div class="row-fluid">
        <div class="span6 ">
            <div class="control-group">
                <label class="control-label">Email</label>
                <div class="controls">
                    {{ form_errors(form.email) }}
                    {{ form_widget(form.email, { 'attr': {'class': 'm-wrap span12 placeholder-no-fix'} }) }}
                </div>
            </div>
        </div>
    </div>

    <div class="row-fluid">
        <div class="span6 ">
            <div class="control-group">
                <label class="control-label">Mobile</label>
                <div class="controls">
                    {{ form_errors(form.mobile) }}
                    {{ form_widget(form.mobile, { 'attr': {'class': 'm-wrap span12 placeholder-no-fix'} }) }}
                </div>
            </div>
        </div>
    </div>

    <div class="row-fluid">
        <div class="span6 ">
            <div class="control-group">
                <label class="control-label">Telephone</label>
                <div class="controls">
                    {{ form_errors(form.telephone) }}
                    {{ form_widget(form.telephone, { 'attr': {'class': 'm-wrap span12 placeholder-no-fix'} }) }}
                </div>
            </div>
        </div>
    </div>

    <h3 class="form-section">Address</h3>              

    <div class="row-fluid">
        <div class="span6 ">
            <div class="control-group">
                <label class="control-label">Street Address</label>
                <div class="controls">
                    {{ form_errors(form.address) }}
                    {{ form_widget(form.address, { 'attr': {'class': 'm-wrap span12 placeholder-no-fix'} }) }}
                </div>
            </div>
        </div>
    </div>

    <div class="row-fluid">
        <div class="span6 ">
            <div class="control-group">
                <label class="control-label">Section</label>
                <div class="controls">
                    {{ form_errors(form.section) }}
                    {{ form_widget(form.section, { 'attr': {'class': 'm-wrap span12 placeholder-no-fix'} }) }}
                </div>
            </div>
        </div>
    </div>

    <div class="row-fluid">
        <div class="span6 ">
            <div class="control-group">
                <label class="control-label">Location</label>
                <div class="controls">
                    {{ form_errors(form.location) }}
                    {{ form_widget(form.location, { 'attr': {'class': 'm-wrap span12 placeholder-no-fix'} }) }}
                </div>
            </div>
        </div>
    </div>

    <div class="form-actions">
        {{ form_widget(form.submit, { 'attr': {'class': 'btn blue', 'label': '<i class="icon-ok"></i> Save'} }) }}
        <a href="{{ path('owner') }}" class="btn">Cancel</a>
    </div>

    {{form_end(form)}}
</div>