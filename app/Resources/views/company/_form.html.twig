<div class="portlet-body form">
    {{ form_start( form, {'attr': {'novalidate': 'novalidate'}} ) }}    

    {{ form_errors(form) }}

    <div class="row-fluid">
        <div class="span6 ">
            <div class="control-group">
                <label class="control-label">Municipality</label>
                <div class="controls">
                    {{ form_errors(form.name) }}
                    {{ form_widget(form.name,{ 'attr': {'class': 'm-wrap span12'} }) }}
                </div>
            </div>
        </div>
    </div>
    <div class="row-fluid">
        <div class="span6 ">
            <div class="control-group">
                <label class="control-label">Physical Address</label>
                <div class="controls">
                    {{ form_errors(form.address) }}
                    {{ form_widget(form.address, { 'attr': {'class': 'm-wrap span12 placeholder-no-fix'} }) }}
                </div>
            </div>
        </div>
    </div>
    <div class="row-fluid">
        <div class="span6 ">
            <div class="control-group">
                <label class="control-label">Postal Address</label>
                <div class="controls">
                    {{ form_errors(form.postal) }}
                    {{ form_widget(form.postal, { 'attr': {'class': 'm-wrap span12 placeholder-no-fix'} }) }}
                </div>
            </div>
        </div>
    </div>
    <div class="row-fluid">
        <div class="span6 ">
            <div class="control-group">
                <label class="control-label">Email</label>
                <div class="controls">
                    {{ form_errors(form.email) }}
                    {{ form_widget(form.email, { 'attr': {'class': 'm-wrap span12'} }) }}
                </div>
            </div>
        </div>
    </div>                                                    
    <div class="row-fluid">
        <div class="span6 ">
            <div class="control-group">
                <label class="control-label">Phone</label>
                <div class="controls">
                    {{ form_errors(form.phone) }}
                    {{ form_widget(form.phone, { 'attr': {'class': 'm-wrap span12'} }) }}
                </div>
            </div>
        </div>
    </div>
    <div class="row-fluid">
        <div class="span6 ">
            <div class="control-group">
                <label class="control-label">Website</label>
                <div class="controls">
                    {{ form_errors(form.website) }}
                    {{ form_widget(form.website, { 'attr': {'class': 'm-wrap span12'} }) }}
                </div>
            </div>
        </div>
    </div>
    <div class="form-actions">
        {{ form_widget(form.submit, { 'attr': {'class': 'btn blue', 'label': '<i class="icon-ok"></i> Save'} }) }}
        <a href="{{ path('company') }}" class="btn">Cancel</a>
    </div>

    {{form_end(form)}}
</div>