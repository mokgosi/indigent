{% extends '::base.html.twig' %}
{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/form-components.js') }}"></script>
    <script>
        jQuery(document).ready(function () {
            App.init();
            FormComponents.init();
        });
    </script>    
{% endblock %}
{% block main -%}

    <div class="container-fluid">
        <!-- BEGIN PAGE HEADER-->   
        <div class="row-fluid">
            <div class="span12">
                <h3 class="page-title">
                    Add New User
                    <small>add new user</small>
                </h3>
                <ul class="breadcrumb">
                    <li>
                        <i class="icon-home"></i>
                        <a href="index.html">Home</a> 
                        <span class="icon-angle-right"></span>
                    </li>
                    <li>
                        <a href="#">Add New User</a>
                    </li>
                </ul>
            </div>
        </div>
        <!-- END PAGE HEADER-->
        <!-- BEGIN PAGE CONTENT-->
        <div class="row-fluid">
            <div class="span12">
                <div class="tabbable tabbable-custom boxless">
                    <ul class="nav nav-tabs">
                        <li class="active"><a  href="#tab_1" data-toggle="tab">User info</a></li>
                    </ul>
                    <div class="tab-content">
                        <div class="tab-pane active" id="tab_1">
                            <div class="portlet box blue">
                                <div class="portlet-title">
                                    <div class="caption"><i class="icon-reorder"></i>User Details</div>
                                    <div class="tools">
                                        <a href="javascript:;" class="collapse"></a>
                                        <a href="#portlet-config" data-toggle="modal" class="config"></a>
                                        <a href="javascript:;" class="reload"></a>
                                        <a href="javascript:;" class="remove"></a>
                                    </div>
                                </div>
                                <div class="portlet-body form">
                                    <form action="{{ path('user') }}" {{ form_enctype(form) }} method="POST">  
                                        {{ form_errors(form) }}
{#                                        {{ form_widget('_token') }}#}
                                        <div class="row-fluid">
                                            <div class="span6 ">
                                                <div class="control-group">
                                                    <label class="control-label">Last Name</label>
                                                    <div class="controls">
                                                        {{ form_errors(form.last_name) }}
                                                        {{ form_widget(form.last_name, { 'attr': {'class': 'm-wrap span12 placeholder-no-fix'} }) }}
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row-fluid">
                                            <div class="span6 ">
                                                <div class="control-group">
                                                    <label class="control-label">First Name</label>
                                                    <div class="controls">
                                                        {{ form_errors(form.first_name) }}
                                                        {{ form_widget(form.first_name, { 'attr': {'class': 'm-wrap span12 placeholder-no-fix'} }) }}
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row-fluid">
                                            <div class="span6 ">
                                                <div class="control-group">
                                                    <label class="control-label">Email</label>
                                                    <div class="controls">
                                                        {{ form_errors(form.email) }}
                                                        {{ form_widget(form.email, { 'attr': {'class': 'm-wrap span12 placeholder-no-fix'} }) }}
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row-fluid">
                                            <div class="span6 ">
                                                <div class="control-group">
                                                    <label class="control-label">Username</label>
                                                    <div class="controls">
                                                        {{ form_errors(form.username) }}
                                                        {{ form_widget(form.username, { 'attr': {'class': 'm-wrap span12 placeholder-no-fix'} }) }}
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row-fluid">
                                            <div class="span6 ">
                                                <div class="control-group">
                                                    <label class="control-label">Password</label>
                                                    <div class="controls">
                                                        {{ form_errors(form.plainPassword.first) }}
                                                        {{ form_widget(form.plainPassword.first, { 'attr': {'class': 'm-wrap span12 placeholder-no-fix'} }) }}
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row-fluid">
                                            <div class="span6 ">
                                                <div class="control-group">
                                                    <label class="control-label">Repeat password</label>
                                                    <div class="controls">
                                                        {{ form_widget(form.plainPassword.second, { 'attr': {'class': 'm-wrap span12 placeholder-no-fix'} }) }}
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row-fluid">
                                            <div class="span6 ">
                                                <div class="control-group">
                                                    <label class="control-label">Telephone</label>
                                                    <div class="controls">
                                                        {{ form_widget(form.telephone, { 'attr': {'class': 'm-wrap span12 placeholder-no-fix'} }) }}
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row-fluid">
                                            <div class="span6 ">
                                                <div class="control-group">
                                                    <label class="control-label">Mobile</label>
                                                    <div class="controls">
                                                        {{ form_widget(form.mobile, { 'attr': {'class': 'm-wrap span12 placeholder-no-fix'} }) }}
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row-fluid">
                                            <div class="span6 ">
                                                <div class="control-group">
                                                    <label class="control-label">Roles</label>
                                                    <div class="controls">
                                                        {{ form_widget(form.roles, { 'attr': {'class': 'm-wrap span12 placeholder-no-fix'} }) }}
                                                    </div>
                                                </div>
                                            </div>
                                        </div>            
                                        <div class="form-actions">
                                            {{ form_widget(form.submit, { 'attr': {'class': 'btn blue'} }) }}
                                            <a href="{{ path('user') }}" class="btn">Cancel</a>
                                        </div>
                                   {{form_end(form)}}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {% endblock %}
