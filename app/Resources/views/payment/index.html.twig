{% extends '::base.html.twig' %}

{% block title %} | Payment{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/form-components.js') }}"></script>
    <script src="{{ asset('js/table-editable.js') }}"></script>    
    <script src="{{ asset('js/payment.js') }}"></script>
    <script>
        jQuery(document).ready(function () {
            App.init();
            FormComponents.init();
            TableEditable.init();
            Payment.init();
        });
    </script>    
{% endblock %}
{% block main -%}
    <div class="container-fluid">
        <!-- BEGIN PAGE HEADER-->
        <div class="row-fluid">
            <div class="span12">
                <h3 class="page-title">
                    Manage Payments
                    <small>manage payments</small>
                </h3>
                <ul class="breadcrumb">
                    <li>
                        <i class="icon-home"></i>
                        <a href="index.html">Home</a> 
                        <i class="icon-angle-right"></i>
                    </li>
                    <li><a href="#">Manage Payments</a></li>
                </ul>
                <!-- END PAGE TITLE & BREADCRUMB-->
            </div>
        </div>
        <div class="row-fluid">
            <div class="span12">
                <!-- BEGIN EXAMPLE TABLE PORTLET-->
                <div class="portlet box blue">
                    <div class="portlet-title">
                        <div class="caption"><i class="icon-edit"></i>Recent Payments</div>
                        <div class="tools">
                            <a href="javascript:;" class="collapse"></a>
                            <a href="#portlet-config" data-toggle="modal" class="config"></a>
                            <a href="javascript:;" class="reload"></a>
                            <a href="javascript:;" class="remove"></a>
                        </div>
                    </div>
                    <div class="portlet-body">
                        <div class="table-toolbar">
                            <div class="btn-group">
                                <a href="{{path('payment_new')}}" class="btn green">
                                    New Payment <i class="icon-plus"></i>
                                </a>
                            </div>
                            <div class="btn-group">
                                <a href="{{path('report_checkout')}}" class="btn purple">
                                    Checkout <i class="icon-usd"></i>
                                </a>
                            </div>
                        </div>
                        <table class="table table-striped table-hover table-bordered" id="sample_editable_1">
                            <thead>
                                <tr>
                                    <th>Erf</th>
                                    <th>Ref #</th>
                                    <th>Installment</th>
                                    <th>Received</th>
                                    <th>Still Due</th>
                                    <th>Total Balance</th>
                                    <th>Payed by</th>
                                    <th>Date</th>
				                    <th>Show</th>
                                    <th>Edit</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for entity in entities %}
                                    <tr>
                                        <td>{{ entity.erf.erfNo }}</td>
                                        <td>{{ entity.refNo }}</td>
                                        <td>{{ entity.amountDue }}</td>
                                        <td>{{ entity.amountReceived }}</td>
                                        <td>{{ entity.amountOutstanding }}</td>
                                        <td>{{ entity.totalOutstanding }}</td>
                                        <td>{{ entity.payedBy }}</td>
                                        <td>{% if entity.created %}{{ entity.created|date('Y-m-d H:i:s') }}{% endif %}</td>
                                        <td><a href="{{ path('payment_show', { 'id': entity.id }) }}">show</a></td>
                                        <td><a href="{{ path('payment_edit', { 'id': entity.id }) }}">edit</a></td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>            
{% endblock %}

