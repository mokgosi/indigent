{% extends '::base.html.twig' %}

{% block main -%}

    <div class="container-fluid">
        <!-- BEGIN PAGE HEADER-->   
        <div class="row-fluid">
            <div class="span12">
                <h3 class="page-title">
                    Add New Erf
                    <small>add new erf</small>
                </h3>
                <ul class="breadcrumb">
                    <li>
                        <i class="icon-home"></i>
                        <a href="index.html">Home</a> 
                        <span class="icon-angle-right"></span>
                    </li>
                    <li>
                        <a href="#">Add New Erf</a>
                    </li>
                </ul>
            </div>
        </div>
        <!-- END PAGE HEADER-->
        <!-- BEGIN PAGE CONTENT-->
        <div class="row-fluid">
            <div class="span12">
                <div class="tabbable tabbable-custom boxless">
                    <ul class="nav nav-tabs">
                        <li class="active"><a  href="#tab_1" data-toggle="tab">Erf info</a></li>
                    </ul>
                    <div class="tab-content">
                        <div class="tab-pane active" id="tab_1">
                            <div class="portlet box blue">
                                <div class="portlet-title">
                                    <div class="caption"><i class="icon-reorder"></i>Erf Details</div>
                                    <div class="tools">
                                        <a href="javascript:;" class="collapse"></a>
                                        <a href="#portlet-config" data-toggle="modal" class="config"></a>
                                        <a href="javascript:;" class="reload"></a>
                                        <a href="javascript:;" class="remove"></a>
                                    </div>
                                </div>
                                <div class="portlet-body form">
                                    {{ form_start( form, {'attr': {'novalidate': 'novalidate'}} ) }}    

                                        <h3 class="form-section">Erf Info</h3>
                                        
                                         {{ form_errors(form) }}

                                        <div class="row-fluid">
                                            <div class="span6 ">
                                                <div class="control-group">
                                                    <label class="control-label">Type</label>
                                                    <div class="controls">
                                                        
                                                        {{ form_widget(form.erfType,{ 'attr': {'class': 'm-wrap span12'} }) }}
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row-fluid">
                                            <div class="span6 ">
                                                <div class="control-group">
                                                    <label class="control-label">Erf No</label>
                                                    <div class="controls">
                                                        {{ form_errors(form.erfNo) }}
                                                        {{ form_widget(form.erfNo, { 'attr': {'class': 'm-wrap span12 placeholder-no-fix'} }) }}
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row-fluid">
                                            <div class="span6 ">
                                                <div class="control-group">
                                                    <label class="control-label">Street Address</label>
                                                    <div class="controls">
                                                        {{ form_widget(form.streetName, { 'attr': {'class': 'm-wrap span12 placeholder-no-fix'} }) }}
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row-fluid">
                                            <div class="span6 ">
                                                <div class="control-group">
                                                    <label class="control-label">Location</label>
                                                    <div class="controls">
                                                        {{ form_widget(form.location, { 'attr': {'class': 'm-wrap span12'} }) }}
                                                    </div>
                                                </div>
                                            </div>
                                        </div>                                                    
                                        <div class="row-fluid">
                                            <div class="span6 ">
                                                <div class="control-group">
                                                    <label class="control-label" >Section</label>
                                                    <div class="controls">
                                                        {{ form_widget(form.section, { 'attr': {'class': 'm-wrap span12'} }) }}
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                                    
                                        <h3 class="form-section">Owner Info</h3>            
                                        
                                        <div class="row-fluid">
                                            <div class="span6 ">
                                                <div class="control-group">
                                                    <label class="control-label" >First Name</label>
                                                    <div class="controls">
                                                        {{ form_widget(form.ownerFirstName, { 'attr': {'class': 'm-wrap span12 placeholder-no-fix'} }) }}
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                                    
                                        <div class="row-fluid">
                                            <div class="span6 ">
                                                <div class="control-group">
                                                    <label class="control-label" >Last Name</label>
                                                    <div class="controls">
                                                        {{ form_widget(form.ownerLastName, { 'attr': {'class': 'm-wrap span12 placeholder-no-fix'} }) }}
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                                    
                                        <div class="row-fluid">
                                            <div class="span6 ">
                                                <div class="control-group">
                                                    <label class="control-label" >Email</label>
                                                    <div class="controls">
                                                        {{ form_errors(form.ownerEmail) }}
                                                        {{ form_widget(form.ownerEmail, { 'attr': {'class': 'm-wrap span12 placeholder-no-fix'} }) }}
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                                    
                                        <div class="row-fluid">
                                            <div class="span6 ">
                                                <div class="control-group">
                                                    <label class="control-label" >Mobile</label>
                                                    <div class="controls">
                                                        {{ form_widget(form.ownerMobile, { 'attr': {'class': 'm-wrap span12 placeholder-no-fix'} }) }}
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                                    
                                        <div class="row-fluid">
                                            <div class="span6 ">
                                                <div class="control-group">
                                                    <label class="control-label" >Telephone</label>
                                                    <div class="controls">
                                                        {{ form_widget(form.ownerTelephone, { 'attr': {'class': 'm-wrap span12 placeholder-no-fix'} }) }}
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                                    
                                        <div class="row-fluid">
                                            <div class="span6 ">
                                                <div class="control-group">
                                                    <label class="control-label" >ID Number</label>
                                                    <div class="controls">
                                                        {{ form_widget(form.ownerIdNo, { 'attr': {'class': 'm-wrap span12 placeholder-no-fix'} }) }}
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        
                                        <div class="form-actions">
                                            {{ form_widget(form.submit, { 'attr': {'class': 'btn blue', 'label': '<i class="icon-ok"></i> Save'} }) }}
{#                                            <button type="submit" class="btn blue"><i class="icon-ok"></i> Save</button>#}
                                            <a href="{{ path('erf') }}" class="btn">Cancel</a>
                                        </div>
                                    
                                    {{form_end(form)}}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    {% endblock %}
