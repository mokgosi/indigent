{% extends 'owner/layout.html.twig' %}

{% block javascripts %}
    {{ parent() }}
    <script>
        jQuery(document).ready(function () {
            App.init();
        });
    </script>    
{% endblock %}

{% block main_body %}
    <div class="portlet-body">        
        <div class="table-toolbar">
            <div class="btn-group pull-right">
                <button class="btn dropdown-toggle" data-toggle="dropdown">Tools <i class="icon-angle-down"></i>
                </button>
                <ul class="dropdown-menu pull-right">
                    <li><a href="#">Print</a></li>
                    <li><a href="#">Save as PDF</a></li>
                    <li><a href="#">Export to Excel</a></li>
                </ul>
            </div>
        </div>
        <div class="portlet-body form">
            <div class="form-horizontal form-view">
            {{ form_start(delete_form)}}
                <h3 class="form-section">Owner Info</h3>
                <div class="row-fluid">
                    <div class="span6 ">
                        <div class="control-group">
                            <label class="control-label" for="firstName">First Name:</label>
                            <div class="controls">
                                <input type='text' value="{{ entity.firstName }}" class='m-wrap span12 placeholder-no-fix' readonly='readonly' />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row-fluid">
                    <div class="span6 ">
                        <div class="control-group">
                            <label class="control-label" for="lastName">Last Name:</label>
                            <div class="controls">
                                <input type='text' value="{{ entity.lastName }}" class='m-wrap span12 placeholder-no-fix' readonly='readonly' />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row-fluid">
                    <div class="span6 ">
                        <div class="control-group">
                            <label class="control-label" >Gender:</label>
                            <div class="controls">
                                <input type='text' value="{{ entity.gender }}" class='m-wrap span12 placeholder-no-fix' readonly='readonly' />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row-fluid">
                    <div class="span6 ">
                        <div class="control-group">
                            <label class="control-label" >ID/Passport:</label>
                            <div class="controls">
                                <input type='text' value="{{ entity.socialSecurityNo }}" class='m-wrap span12 placeholder-no-fix' readonly='readonly' />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row-fluid">
                    <div class="span6 ">
                        <div class="control-group">
                            <label class="control-label" >Mobile:</label>
                            <div class="controls">
                                <input type='text' value="{{ entity.mobile }}" class='m-wrap span12 placeholder-no-fix' readonly='readonly' />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row-fluid">
                    <div class="span6 ">
                        <div class="control-group">
                            <label class="control-label" >Telephone:</label>
                            <div class="controls">
                                <input type='text' value="{{ entity.telephone }}" class='m-wrap span12 placeholder-no-fix' readonly='readonly' />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row-fluid">
                    <div class="span6 ">
                        <div class="control-group">
                            <label class="control-label" >Email:</label>
                            <div class="controls">                                                
                                <input type='text' value="{{ entity.email }}" class='m-wrap span12 placeholder-no-fix' readonly='readonly' />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row-fluid">
                    <div class="span6 ">
                        <div class="control-group">
                            <label class="control-label" >Address:</label>
                            <div class="controls">
                                <span class="text bold">n/a</span>
                            </div>
                        </div>
                    </div>
                </div>
                <h3 class="form-section">Properties</h3>
                <div class="portlet">
                    <div class="portlet-body">
                        <table class="table table-striped table-bordered table-advance table-hover">
                            <thead>
                                <tr>
                                    <th><i class="icon-briefcase"></i> Erf #</th>
                                    <th class="hidden-phone"><i class="icon-question-sign"></i> Address</th>
                                    <th><i class="icon-bookmark"></i> Balance</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for erf in erfs %}
                                    <tr>
                                        <td><a href="{{ path('erf_show', { 'id':erf.id }) }}">{{ erf.erfno }}</a></td>
                                        <td class="hidden-phone">{{ erf.address }}, {{ erf.section.name }}, {{ erf.location.name }}</td>
                                        <td>{{ erf.balance }}</td>
                                        <td><a href="{{ path('erf_show', { 'id': erf.id }) }}" class="btn mini red-stripe">View</a></td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="form-actions">
                    <a href="{{ path('owner') }}" class="btn">Back to list</a>
                    <a href="{{ path('owner_edit', { 'id': entity.id }) }}"  class="btn blue"><i class="icon-pencil"></i> Edit</a>
                    {{ form_widget(delete_form.submit, { 'attr': {'class': 'btn red', 'label': 'Delete'} }) }}
                </div>
                {{form_end(delete_form)}}
            </div>
        </div>
    </div>
</div>
{% endblock %}