{% extends '::base.html.twig' %}

{% block main -%}

    <div class="container-fluid">
        <!-- BEGIN PAGE HEADER-->   
        <div class="row-fluid">
            <div class="span12">
                <h3 class="page-title">
                    Add Payment
                    <small>add payment</small>
                </h3>
                <ul class="breadcrumb">
                    <li>
                        <i class="icon-home"></i>
                        <a href="index.html">Home</a> 
                        <span class="icon-angle-right"></span>
                    </li>
                    <li>
                        <a href="#">Add New Payment</a>
                    </li>
                </ul>
            </div>
        </div>
        <!-- END PAGE HEADER-->
        <!-- BEGIN PAGE CONTENT-->
        <div class="row-fluid">
            <div class="span12">
                <div class="tabbable tabbable-custom boxless">
                    <ul class="nav nav-tabs">
                        <li class="active"><a  href="#tab_1" data-toggle="tab">Payment info</a></li>
                    </ul>
                    <div class="tab-content">
                        <div class="tab-pane active" id="tab_1">
                            <div class="portlet box blue">
                                <div class="portlet-title">
                                    <div class="caption"><i class="icon-reorder"></i>Payment Details</div>
                                    <div class="tools">
                                        <a href="javascript:;" class="collapse"></a>
                                        <a href="#portlet-config" data-toggle="modal" class="config"></a>
                                        <a href="javascript:;" class="reload"></a>
                                        <a href="javascript:;" class="remove"></a>
                                    </div>
                                </div>
                                <div class="portlet-body form">
                                    {{ form_start( form, {'attr': {'novalidate': 'novalidate'}} ) }}        

                                    {{ form_errors(form) }}

                                    <div class="row-fluid">
                                        <div class="span6 ">
                                            <div class="control-group">
                                                <label class="control-label">Receipt #</label>
                                                <div class="controls">
                                                    {{ form_errors(form.receiptNo) }}
                                                    {{ form_widget(form.receiptNo, { 'attr': {'class': 'm-wrap span12 placeholder-no-fix'} }) }}
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                                
                                    <div class="row-fluid">
                                        <div class="span6 ">
                                            <div class="control-group">
                                                <label class="control-label">Erf</label>
                                                <div class="controls">
                                                    {{ form_widget(form.erf, { 'attr': {'class': 'm-wrap span12 placeholder-no-fix'} }) }}
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                                
                                    <div class="row-fluid">
                                        <div class="span6 ">
                                            <div class="control-group">
                                                <label class="control-label">Installment</label>
                                                <div class="controls">
                                                    {{ form_widget(form.amountDue, { 'attr': {'class': 'm-wrap span12 placeholder-no-fix'} }) }}
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                                
                                    <div class="row-fluid">
                                        <div class="span6 ">
                                            <div class="control-group">
                                                <label class="control-label">Received</label>
                                                <div class="controls">
                                                    {{ form_widget(form.amountReceived, { 'attr': {'class': 'm-wrap span12 placeholder-no-fix'} }) }}
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                                
                                    <div class="row-fluid">
                                        <div class="span6 ">
                                            <div class="control-group">
                                                <label class="control-label">Outstanding</label>
                                                <div class="controls">
                                                    {{ form_widget(form.amountOutstanding, { 'attr': {'class': 'm-wrap span12 placeholder-no-fix'} }) }}
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                                
                                    <div class="row-fluid">
                                        <div class="span6 ">
                                            <div class="control-group">
                                                <label class="control-label">New Balance</label>
                                                <div class="controls">
                                                    {{ form_widget(form.totalOutstanding, { 'attr': {'class': 'm-wrap span12 placeholder-no-fix'} }) }}
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                                
                                    <div class="row-fluid">
                                        <div class="span6 ">
                                            <div class="control-group">
                                                <label class="control-label">Name</label>
                                                <div class="controls">
                                                    {{ form_widget(form.payedBy, { 'attr': {'class': 'm-wrap span12 placeholder-no-fix'} }) }}
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                                
                                    <div class="row-fluid">
                                        <div class="span6 ">
                                            <div class="control-group">
                                                <label class="control-label">Address</label>
                                                <div class="controls">
                                                    {{ form_widget(form.payedByAddress, { 'attr': {'class': 'm-wrap span12 placeholder-no-fix'} }) }}
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                                
                                    <div class="row-fluid">
                                        <div class="span6 ">
                                            <div class="control-group">
                                                <label class="control-label">Contact</label>
                                                <div class="controls">
                                                    {{ form_widget(form.payedByPhone, { 'attr': {'class': 'm-wrap span12 placeholder-no-fix'} }) }}
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                                
                                    <div class="row-fluid">
                                        <div class="span6 ">
                                            <div class="control-group">
                                                <label class="control-label">Name</label>
                                                <div class="controls">
                                                    {{ form_widget(form.fosUserId, { 'attr': {'class': 'm-wrap span12 placeholder-no-fix', 'readonly':'readonly'} }) }}
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                                
                                    <div class="form-actions">
                                        {#<button type="submit" class="btn blue"><i class="icon-ok"></i> Save</button>#}
                                        {{ form_widget(form.submit, { 'attr': {'class': 'btn blue', 'label': '<i class="icon-ok"></i> Save'} }) }}
                                        <a href="{{ path('erftype') }}" class="btn">Cancel</a>
                                    </div>
                                    {{form_end(form)}}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    {% endblock %}
