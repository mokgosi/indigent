{% extends 'erf/layout.html.twig' %}

{% block title ' | Erf' %}

{% block page_title %}Erf Management{% endblock %}
{% block page_title_small %}erf management{% endblock %}
{% block breadcrumb %}Erf Management{% endblock %}
{% block page_tab_info_title %}Erf Info{% endblock %}
{% block page_tab_details_title %}Erf Details{% endblock %}
{% block data_table_header %}Recent Erfs{% endblock %}

{% block main_body %}

    <div class="portlet-body">

        <div class="table-toolbar">
            <div class="btn-group">
                <a href="{{path('erf_new')}}" class="btn green">
                    Add New <i class="icon-plus"></i>
                </a>
            </div>
        </div>
        <table class="table table-striped table-hover table-bordered" id="sample_editable_1">
            <thead>
                <tr>
                    <th>Erf no</th>
                    <th>Street Address</th>
                    <th>Section</th>
                    <th>Location</th>
                    <th>Type</th>
                    <th>Owner</th>
                    <th>Show</th>
                    <th>Edit</th>
                </tr>
            </thead>
            <tbody>
                {% for entity in entities %}
                    <tr>
                        <td><a href="{{ path('erf_show', { 'id': entity.id }) }}">{{ entity.erfNo }}</a></td>
                        <td>{{ entity.address }}</td>
                        <td>{{ entity.section.name }}</td>
                        <td>{{ entity.location.name }}</td>
                        <td>{{ entity.erfType.name }}</td>
                        <td>{{ entity.owner ? entity.owner.firstName }} {{ entity.owner ? entity.owner.lastName }}</td>
                        <td><a href="{{ path('erf_show', { 'id': entity.id }) }}">show</a></td>
                        <td><a href="{{ path('erf_edit', { 'id': entity.id }) }}">edit</a></td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
