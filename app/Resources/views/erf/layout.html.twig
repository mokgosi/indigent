{% extends '::base.html.twig' %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/erf.js') }}"></script>
    <script>
        jQuery(document).ready(function () {
            App.init();
            Erf.init();
        });
    </script>    
{% endblock %}

{% block main -%}
    <div class="container-fluid">
        <div class="row-fluid">
            <div class="span12">
                <h3 class="page-title">
                    {% block page_title %}{% endblock %}
                    <small>{% block page_title_small %}{% endblock %}</small>
                </h3>
                <ul class="breadcrumb">
                    <li>
                        <i class="icon-home"></i>
                        <a href="index.html">Home</a> 
                        <span class="icon-angle-right"></span>
                    </li>
                    <li>
                        <a href="#">{% block breadcrumb %}{% endblock %}</a>
                    </li>
                </ul>
            </div>
        </div>
        <div class="row-fluid">
            <div class="span12">
                <div class="portlet box blue">
                    <div class="portlet-title">
                        <div class="caption"><i class="icon-edit"></i> {% block data_table_header %}{% endblock %}</div>
                        <div class="tools">
                            <a href="javascript:;" class="collapse"></a>
                            <a href="#portlet-config" data-toggle="modal" class="config"></a>
                            <a href="javascript:;" class="reload"></a>
                            <a href="javascript:;" class="remove"></a>
                        </div>
                    </div>
                    {% block main_body %}{% endblock %}            
                </div>
            </div>
        </div>
    </div>            
{% endblock %}

