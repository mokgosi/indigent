{% extends 'report/layout.html.twig' %}


{% block main_body %}

    <!-- BEGIN PAGE CONTENT-->
    <div class="row-fluid">
        <div class="tabbable tabbable-custom tabbable-full-width" style='border:1px solid #ddd'>
            <div class="row-fluid">
                <div class="span12 booking-search">
                    {{ form_start( form, {'attr': {'novalidate': 'novalidate'}} ) }}
                    <div class="clearfix">
                        <div class="control-group pull-left margin-right-20">
                            <label class="control-label">Location</label>
                            <div class="controls">
                                <div class="input-append left">
                                    {{ form_widget(form.location,{ 'attr': {'class': 'm-wrap','placeholder':'Type erfno to search...'} }) }}
                                </div>
                            </div>
                        </div>
                        <div class="control-group pull-left margin-right-20">
                            <label class="control-label">Date From:</label>
                            <div class="controls">
                                <div class="input-append date date-picker" data-date="" data-date-format="yyyy-mm-dd" data-date-viewmode="years">
                                    {{ form_widget(form.datefrom,{ 'attr': {'class': 'm-wrap m-ctrl-medium date-picker'} }) }}
                                    <span class="add-on"><i class="icon-calendar"></i></span>
                                </div>
                            </div>
                        </div>
                        <div class="control-group pull-left margin-right-20">
                            <label class="control-label">Date To:</label>
                            <div class="controls">
                                <div class="input-append date date-picker" data-date="" data-date-format="yyyy-mm-dd" data-date-viewmode="years">
                                    {{ form_widget(form.dateto,{ 'attr': {'class': 'm-wrap m-ctrl-medium date-picker'} }) }}
                                    <span class="add-on"><i class="icon-calendar"></i></span>
                                </div>
                            </div>
                        </div>
                        <div class="input-append left">
                            <label class="control-label">&nbsp;</label>
                            {{ form_widget(form.submit, { 'attr': {'class': 'btn blue', 'label': 'Generate<i class="m-icon-swapright m-icon-white"></i> '} }) }}
                        </div>
                    </div>
                    {{form_end(form)}}
                </div>
            </div>
        </div>
    </div>

    <div class="portlet box blue">
        <div class="portlet-title">
            <div class="caption"><i class="icon-edit"></i> Report {% block report_title %}{% endblock %}</div>
            <div class="tools">
                <a href="javascript:;" class="collapse"></a>
                <a href="#portlet-config" data-toggle="modal" class="config"></a>
                <a href="javascript:;" class="reload"></a>
                <a href="javascript:;" class="remove"></a>
            </div>
        </div>
        <div class="portlet-body">

            {% if location %}

                <div class="form-horizontal form-view">
                    <h3 class="form-section">Location Info</h3>
                    <div class="clearfix"></div>
                    <div class="span4 responsive" data-tablet="span6" data-desktop="span3">

                        <div class="row-fluid">
                            <div class="span6 ">
                                <div class="control-group">
                                    <label class="control-label" for="erfNo">Location:</label>
                                    <div class="controls">
                                        <span class="text">{{location.name}}</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row-fluid">
                            <div class="span6 ">
                                <div class="control-group">
                                    <label class="control-label" for="erfNo">xCoord:</label>
                                    <div class="controls">
                                        <span class="text">{{location.xCoord}}</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row-fluid">
                            <div class="span6 ">
                                <div class="control-group">
                                    <label class="control-label" for="erfNo">yCoord:</label>
                                    <div class="controls">
                                        <span class="text">{{location.yCoord}}</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        </span>
                    </div>
                    <div class="span4 responsive mini-stats clearfix" data-tablet="span6" data-desktop="span4">
                        <div class='totals-head'>Payment Totals</div>
                        <div class='minii'>
                            <div class='meta-info'>
                                <span class='meta-value green'>{{ entities.total.completed }}</span>
                                <span class='meta-title'>Completed</span>
                            </div>
                        </div>    
                        <div class='minii'>
                            <div class='meta-info'>
                                <span class='meta-value red'>{{ entities.total.cancelled }}</span>
                                <span class='meta-title'>Cancelled</span>
                            </div>
                        </div>
                        <div class='minii'>
                           <div class='meta-info'>
                                <span class='meta-value yellow'>{{ entities.total.pending }}</span>
                                <span class='meta-title'>Pending</span>
                            </div>
                        </div>
                        <div class='minii'>
                            <div class='meta-info'>
                                <span class='meta-value blue'>R {{ entities.total.revenue }}</span>
                                <span class='meta-title'>Revenue</span>
                            </div>
                        </div>
                    </div>                
                    <div class="span4 responsive" data-tablet="span6" data-desktop="span3">
                        <div id="placeholder" style="width:450px; height:200px"></div>
                    </div>
                    <div class="clearfix"></div>
                    <h3 class="form-section">Revenue Stats</h3>
                    <div class="clearfix"></div>
                </div>
            {% endif %}

            <table class="table table-striped table-hover table-bordered" id="sample_editable_1">
                <thead>
                    <tr>
                        <th>Section</th>
                        <th>Completed</th>
                        <th>Cancelled</th>
                        <th>Pending</th>
                        <th>Revenue</th>
                    </tr>
                </thead>
                {% if entities  %}
                    {% for entity in entities.data %}
                        <tr>
                            <td>{{entity.name}}</td>
                            <td>{{entity.completed}}</td>
                            <td>{{entity.cancelled}}</td>
                            <td>{{entity.pending}}</td>
                            <td>R {{entity.revenue}}</td>
                        </tr>
                    {% endfor %}
                {% endif %}
            </table>
        </div>
    </div>
{% endblock %}