{% extends '::base.html.twig' %}

{% block title %} | Erf Types Management{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/form-components.js') }}"></script>
    <script>
        jQuery(document).ready(function () {
            App.init();
            FormComponents.init();
        });
    </script>    
{% endblock %}
{% block main -%}

    <div class="container-fluid">
        <!-- BEGIN PAGE HEADER-->   
        <div class="row-fluid">
            <div class="span12">
                <h3 class="page-title">
                    Add Erf Type
                    <small>add erf type</small>
                </h3>
                <ul class="breadcrumb">
                    <li>
                        <i class="icon-home"></i>
                        <a href="index.html">Home</a> 
                        <span class="icon-angle-right"></span>
                    </li>
                    <li>
                        <a href="#">Add New Erf Type</a>
                    </li>
                </ul>
            </div>
        </div>
        <!-- END PAGE HEADER-->
        <!-- BEGIN PAGE CONTENT-->
        <div class="row-fluid">
            <div class="span12">
                <div class="tabbable tabbable-custom boxless">
                    <ul class="nav nav-tabs">
                        <li class="active"><a  href="#tab_1" data-toggle="tab">Erf Type info</a></li>
                    </ul>
                    <div class="tab-content">
                        <div class="tab-pane active" id="tab_1">
                            <div class="portlet box blue">
                                <div class="portlet-title">
                                    <div class="caption"><i class="icon-reorder"></i>Erf Type Details</div>
                                    <div class="tools">
                                        <a href="javascript:;" class="collapse"></a>
                                        <a href="#portlet-config" data-toggle="modal" class="config"></a>
                                        <a href="javascript:;" class="reload"></a>
                                        <a href="javascript:;" class="remove"></a>
                                    </div>
                                </div>
                                <div class="portlet-body form">
                                    {{ form_start( form, {'attr': {'novalidate': 'novalidate'}} ) }}        

                                    {{ form_errors(form) }}

                                    <div class="row-fluid">
                                        <div class="span6 ">
                                            <div class="control-group">
                                                <label class="control-label">Type</label>
                                                <div class="controls">
                                                    {{ form_errors(form.name) }}
                                                    {{ form_widget(form.name, { 'attr': {'class': 'm-wrap span12 placeholder-no-fix'} }) }}
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row-fluid">
                                        <div class="span6 ">
                                            <div class="control-group">
                                                <label class="control-label">Short Description</label>
                                                <div class="controls">
                                                    {{ form_widget(form.description, { 'attr': {'class': 'm-wrap span12 placeholder-no-fix'} }) }}
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-actions">
                                        {#<button type="submit" class="btn blue"><i class="icon-ok"></i> Save</button>#}
                                        {{ form_widget(form.submit, { 'attr': {'class': 'btn blue', 'label': '<i class="icon-ok"></i> Save'} }) }}
                                        <a href="{{ path('erftype') }}" class="btn">Cancel</a>
                                    </div>
                                    {{form_end(form)}}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    {% endblock %}
