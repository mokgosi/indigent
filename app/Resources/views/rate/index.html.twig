{% extends 'rate/layout.html.twig' %}

{% block main_body %}
    <div class="portlet-body">
        <div class="table-toolbar">
            <div class="btn-group">
                <a href="{{path('rate_new')}}" class="btn green">
                    Add New <i class="icon-plus"></i>
                </a>
            </div>
        </div>
        <table class="table table-striped table-hover table-bordered" id="sample_editable_1">
            <thead>
                <tr>
                    <th>Amount</th>
                    <th>VAT %</th>
                    <th>Show</th>
                    <th>Edit</th>
                </tr>
            </thead>
            <tbody>
                {% for entity in entities %}
                    <tr>
                        <td>ZAR {{ entity.amount }}</td>
                        <td>{{ entity.vat }}</td>
                        <td><a href="{{ path('rate_show', { 'id': entity.id }) }}">show</a></td>
                        <td><a href="{{ path('rate_edit', { 'id': entity.id }) }}">edit</a></td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}