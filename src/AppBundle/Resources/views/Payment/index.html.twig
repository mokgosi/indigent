{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Payment list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Receiptno</th>
                <th>Erfid</th>
                <th>Amountdue</th>
                <th>Amountreceived</th>
                <th>Amountoutstanding</th>
                <th>Totaloutstanding</th>
                <th>Payedby</th>
                <th>Payedbyaddress</th>
                <th>Payedbyphone</th>
                <th>Fosuserid</th>
                <th>Created</th>
                <th>Updated</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('payment_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.receiptNo }}</td>
                <td>{{ entity.erfId }}</td>
                <td>{{ entity.amountDue }}</td>
                <td>{{ entity.amountReceived }}</td>
                <td>{{ entity.amountOutstanding }}</td>
                <td>{{ entity.totalOutstanding }}</td>
                <td>{{ entity.payedBy }}</td>
                <td>{{ entity.payedByAddress }}</td>
                <td>{{ entity.payedByPhone }}</td>
                <td>{{ entity.fosUserId }}</td>
                <td>{% if entity.created %}{{ entity.created|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.updated %}{{ entity.updated|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('payment_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('payment_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('payment_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
